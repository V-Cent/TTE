{
  "name": "tte",
  "version": "0.19.4",
  "description": "Tales Tech Encyclopaedia",
  "main": "src/main.js",
  "private": true,
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "docs/"
    ],
    "ext": "js,html,css"
  },
  "scripts": {
    "build": "tsdown --no-clean --config build.config.ts",
    "watch": "tsdown --no-clean --sourcemap --config watch.config.ts --watch ./src",
    "lint": "npx eslint src/**/*.ts --ignore-pattern src/katex.min.js",
    "prettier": "npx prettier --write src/",
    "release" : "tsc && npm run lint && npm run prettier && npm run build"
  },
  "dependencies": {
    "katex": "^0.16.11",
    "remarkable": "^2.0.1"
  },
  "devDependencies": {
    "@minify-html/node": "^0.15.0",
    "@types/katex": "^0.16.7",
    "@types/remarkable": "^2.0.8",
    "browserslist": "^4.24.5",
    "esbuild": "^0.25.2",
    "eslint": "^9.23.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-promise": "^7.2.1",
    "globals": "^16.0.0",
    "lightningcss": "^1.30.1",
    "open": "^10.1.2",
    "prettier": "^3.5.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-serve": "^3.0.0",
    "rollup-plugin-swc3": "^0.12.1",
    "tsdown": "^0.12.2",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.29.0"
  }
}
