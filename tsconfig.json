{
    "compilerOptions": {
      "target": "ES2023",
      "module": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "noEmit": true,
      "noImplicitAny": true,
      "allowImportingTsExtensions": true,
      "moduleResolution": "nodenext",
      "allowJs": true, // for katex
      "checkJs": false, // for katex
    },
    "include": [
      "./src/**/*.ts",
      "eslint.config.mjs",
      "build.config.ts",
      "cache.config.ts",
      "watch.config.ts"
    ],
    "exclude": [
      "node_modules",
      "./docs"
    ]
}
